<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:divider">@color/dividerColor</item>
    </style>

    <!--App Bar Style-->
    <style name="SummaryLabel" >
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SummaryData" parent="SummaryLabel">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="GraphLabel" parent="SummaryData">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GraphData" parent="GraphLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="GraphLabelAppbar" parent="GraphLabel">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GraphDataAppbar" parent="GraphData">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!--Item Styles-->
    <style name="ItemTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="ItemInfo" parent="ItemTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="ItemLabel" parent="ItemTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemInfoPricePerUnit" parent="ItemInfo">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ItemInfoTotal" parent="ItemInfo">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>